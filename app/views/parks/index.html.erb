<p id="notice"><%= notice %></p>

<h1>Parks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cover</th>
      <th>Images</th>
      <th>Avatar</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>Post code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parks.each do |park| %>
      <tr>
        <td><%= park.name %></td>
        <td><%= park.description %></td>
        <td><%= park.cover %></td>
        <td><%= park.images %></td>
        <td><%= park.avatar %></td>
        <td><%= park.address_line_1 %></td>
        <td><%= park.address_line_2 %></td>
        <td><%= park.post_code %></td>
        <td><%= link_to 'Show', park %></td>
        <td><%= link_to 'Edit', edit_park_path(park) %></td>
        <td><%= link_to 'Destroy', park, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

